{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@svelte/*": ["app/static/js/svelte/*"],
            "@ui/*": ["app/static/js/ui/*"],
            "@lib/*": ["app/static/js/lib/*"]
        },
        "types": ["vitest/globals"]
    },
    "include": [
        "app/static/js/**/*.d.ts",
        "app/static/js/svelte/*.svelte",
        "app/static/js/lib/**/*.ts",
        "app/static/js/main.ts",
        "setupTests.ts",
        "vitest.config.mts"
    ],
    "exclude": [
        "app/static/js/ui/components/**",
        "app/static/js/svelte/stores/**",
        "app/static/js/svelte/utils/**",
        "app/static/js/svelte/lib/**",
        "app/static/js/**/*.bundle.js",
        "app/static/js/**/*.esm.js",
        "node_modules"
    ]
}
