{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@svelte/*": ["app/static/js/svelte/*"],
            "@ui/*": ["app/static/js/ui/*"],
            "@lib/*": ["app/static/js/lib/*"]
        },
        "types": ["vitest/globals"]
    },
    "include": [
        "app/static/js/**/*.ts",
        "app/static/js/**/*.svelte",
        "app/static/js/**/*.js",
        "setupTests.ts",
        "vitest.config.mts"
    ]
}
