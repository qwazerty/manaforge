  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "dev:css": "tailwindcss -i ./app/frontend/css/tailwind.css -o ./app/static/dist/css/manaforge.css --watch=always",
    "build:css": "tailwindcss -i ./app/frontend/css/tailwind.css -o ./app/static/dist/css/manaforge.css --minify",
    "build": "vite build && pnpm run build:css",
    "dev:watch": "npm-run-all --parallel dev:css dev:build",
    "dev:build": "vite build --watch",
    "lint": "eslint 'app/frontend/js/svelte/**/*.svelte' && svelte-check --tsconfig ./tsconfig.json",
    "lint:eslint": "eslint 'app/frontend/js/svelte/**/*.svelte'",
    "lint:check": "svelte-check --tsconfig ./tsconfig.json",
    "test:build": "npm run build:svelte",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qwazerty/manaforge.git"
  },
