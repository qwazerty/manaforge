    "eslint-plugin-svelte": "^3.13.1",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.2.0",
    "linkedom": "^0.18.12",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
